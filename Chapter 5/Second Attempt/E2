#include <iostream>

using namespace std;

double ctok(double c) { // converts Celsius to Kelvin
	
	double k = c + 273.15;
	return k;
}

int main() {
	
	double c = 0.0;

	cout << "Please input a number in Celcius to see its corresponding Kelvin value.\n\n";
	cin >> c;

	double k = ctok(c);
	cout << "\n\n" << c << " degrees Celcius is " << k << " Kelvins.\n" << endl;

	return 0;
}
